                            "creditScore": 950,
                            "fraudSituation": "TRUSTWORTHY",
                            "__v": 0
                            }
                        }
                    }
                }
            }
        }
    },
    "/users/employee": {
      "post": {
        "summary": "Create new employee users [Batch]",
        "description": "Will create the employee users with their encrypted password",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties":{
                    "users": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties": {
                          "firstName": {
                              "type": "string"
                            },
                            "lastName": {
                              "type": "string"
                            },
                            "email": {
                              "type": "string"
                            },
                            "password": {
                              "type": "string"
                            },
                            "monthlySalary": {
                              "type": "number"
                            },
                            "department": {
                              "type": "string"
                            },
                            "age": {
                              "type": "number"
                            },
                            "state": {
                              "type": "string"
                            },
                            "gender": {
                              "type": "string",
                              "enum": ["F", "M", "Other"]
                            },
                            "birthDate": {
                              "type": "string"
                            }
                          }
                      }
                    }
                  },
                      "example": {
                        "users": [
                            {
                                "email": "user.prueba20235@cmail.com",
                                "firstName": "uer1",
                                "lastName": "perez",
                                "password": "pass",
                                "gender": "M",
                                "monthlySalary": 10000.00,
                                "department": "department",
                                "age": 50,
                                "state": "state",
                                "birthDate": "1970/05/31"
                            },
                            {
                                "email": "user.prueba20345@cmail.com",
                                "firstName": "uer1",
                                "lastName": "perez",
                                "password": "pass",
                                "gender": "M",
                                "monthlySalary": 10000.00,
                                "department": "department",
                                "age": 50,
                                "state": "state",
                                "birthDate": "1970/05/31"
                            }
                    ]}
                  }
              }
          }
        },
        "responses": {
          "201": {
            "description": "Return the created employees",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                      "type": "object",
                      "properties": {
                        "email": {
                          "type": "string"
                        }
                    }
                  }
                },
                "example": [
                  { "email": "user.prueba21@cmail.com"},
                  { "email": "user.prueba22@cmail.com"}
                ]
              }
            }
          }
        }
      }
    },
    "/users/employee/login": {
      "post": {
        "summary": "Login for employee user",
        "description": "Will return the token for the employee if the credentials are ok",
        "tags": ["Users"],
        "requestBody": {
          "required": true,
          "content": {
              "application/json": {
                "schema": {
                      "type": "object",
                      "properties": {
                          "email": {
                            "type": "string"
                          },
                          "password": {
                            "type": "string"
                          }
                      },
                      "example": {
                          "email": "johndoe@cmail.com",
                          "password": "password"
                        }
                  }
              }
          }
        },
        "responses": {
          "200": {
            "description": "Return the token to be able to use the allowed endpoints",
            "content": {
              "application/json": {
                "schema": {
                    "type": "object",
                    "properties": {
                      "email": {
                        "type": "string"
                      },
                      "token": {
                        "type": "string"
                      }
                  }
                },
                "example": { 
                  "email": "user.prueba21@cmail.com", 
                  "token": "tokenmock"
                }
              }
            }
          }
        }
      }
    }
}
